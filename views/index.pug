extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Portfolio

      p.lead.text-light
        | My TeamTreehouse Projects
  article.grid-container.portfolio-index
  
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in myproject
          .cell
            a(href=`/project/${project.project_id}`)
              img.project-images.thumbnail(src=`../images/project${project.project_id+1}_1.jpg`)
              h5= project.project_name
