extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1=`${myName}`

        p.lead.text-light
          | Full Stack JavaScript Developer.

        .portfolio-bio
          p=`${myPortfolio}`

      .cell.portfolio-meta.small-6.medium-2.large-3
        ul
        each skill in mySkills
          li= skill
        h6 Contact Info
        ul

        ul
          li=`${myContact.email}`

        a.button.expanded(href=`${myPages.github}`) GitHub
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  